{
  "ConnectionStrings": {
    "event-store-connection": "${EVENT_STORE_HOST}:${EVENT_STORE_PORT};Username=${EVENT_STORE_USER};Password=${EVENT_STORE_PASSWORD};Database=${EVENT_STORE_DB}",
    "read-store-connection": "${READ_STORE_HOST}:${READ_STORE_PORT};Username=${READ_STORE_USER};Password=${READ_STORE_PASSWORD};Database=${READ_STORE_DB}",
    "login-store-connection": "${LOGIN_STORE_HOST}:${LOGIN_STORE_PORT};Username=${LOGIN_STORE_USER};Password=${LOGIN_STORE_PASSWORD};Database=${LOGIN_STORE_DB}"
  },
  "RedisConfiguration": {
    "Host": "${REDIS_HOST}:${REDIS_PORT}",
    "PollingInterval": "1",
    "Streams": [
      {
        "StreamName": "club_service_events.public.DomainEvent",
        "ConsumerGroup": "club_service_events.domain.events.group",
        "DesiredEventTypes": [
          "*"
        ]
      },
      {
        "StreamName": "tournament_events.public.technicaleventenvelope",
        "ConsumerGroup": "tournament_service_events.domain.events.group",
        "DesiredEventTypes": [
          "TOURNAMENT_CONFIRMED",
          "TOURNAMENT_CANCELED"
        ]
      }
    ]
  },
  "SmtpConfiguration": {
    "Host": "${SMTP_HOST}",
    "Port": "${SMTP_PORT}",
    "SenderEmailAddress": "${SMTP_SENDER_EMAIL_ADDRESS}",
    "PollingInterval": "10"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}